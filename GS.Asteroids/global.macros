        macro
        pixelLeft
        lda >SCREEN_ADDR,x
        ora currentColorLeft
        sta >SCREEN_ADDR,x
        mend

        macro
        pixelRight
        lda >SCREEN_ADDR,x
        ora currentColorRight
        sta >SCREEN_ADDR,x
        mend

        macro
        pixelLeftTranslucent
        lda >SCREEN_ADDR,x
        sta tempColor
        and #$f0
        clc
        adc currentColorLeft
        cmp #$f0
        bcs clampLeft_&SYSCNT
        bra dontClampLeft_&SYSCNT
clampLeft_&SYSCNT anop
        lda #$f0
dontClampLeft_&SYSCNT anop
        ora tempColor
        sta >SCREEN_ADDR,x
        mend

        macro
        pixelRightTranslucent
        lda >SCREEN_ADDR,x
        sta tempColor
        and #$0f
        clc
        adc currentColorRight
        cmp #$0f
        bcs clampRight_&SYSCNT
        bra dontClampRight_&SYSCNT
clampRight_&SYSCNT anop
        lda #$0f
dontClampRight_&SYSCNT anop
        ora tempColor
        sta >SCREEN_ADDR,x
        mend


        macro
        spriteGetDrawAddress
        lda drawY
        asl a
        tax
        lda screenRowOffsets,x
        sta drawAddress
        lda drawX
        lsr a
        clc
        adc drawAddress
        clc
        adc #$2000
        sta drawAddress
        mend

